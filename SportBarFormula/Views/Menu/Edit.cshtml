@model MenuItemViewModel

@{
    ViewData["Title"] = "Редактиране на артикул";
}

<h2 class="text-center" style="color:#E4C087;">@ViewData["Title"]</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label" style="color:#E4C087;"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageURL" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsAvailable" class="control-label" style="color:#E4C087;"></label>
                <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Ingredients" class="control-label" style="color:#E4C087;"></label>
                <textarea asp-for="Ingredients" class="form-control"></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PreparationTime" class="control-label" style="color:#E4C087;"></label>
                <input asp-for="PreparationTime" class="form-control" />
                <span asp-validation-for="PreparationTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsDeleted" class="control-label" style="color:#E4C087;"></label>
                <input type="checkbox" asp-for="IsDeleted" class="form-check-input" />
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Назад към списъка</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
