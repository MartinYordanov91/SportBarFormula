@model MenuItemEditViewModel

@{
    ViewData["Title"] = "Редактиране на артикул";
}

<h2 class="text-center mt-5" style="color:#E4C087;">@ViewData["Title"]</h2>
<hr />

@if (User?.Identity?.IsAuthenticated == true)
{
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="d-flex justify-content-center">
            <form asp-action="Edit" method="post" class="p-3 w-50" style="background-color: rgba(147, 98, 33, 0.5); border-radius: 10px;">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MenuItemId" />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="Name" class="control-label" style="color:#E4C087;">Наименование</label>
                        <input asp-for="Name" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="Description" class="control-label" style="color:#E4C087;">Описание</label>
                        <textarea asp-for="Description" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="Price" class="control-label" style="color:#E4C087;">Цена</label>
                        <div class="input-group">
                            <span class="input-group-text mb-3" style="background-color: rgba(255, 255, 255, 0.5);">ЛВ</span>
                            <input asp-for="Price" class="form-control mb-3" aria-required="true" type="number" step="0.01" min="0" style="background-color: rgba(255, 255, 255, 0.5);" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="Quantity" class="control-label" style="color:#E4C087;">Грамаж/Милилитри</label>
                        <input asp-for="Quantity" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Category" />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="CategoryId" class="control-label" style="color:#E4C087;">Категория</label>
                        <select asp-for="CategoryId" class="form-control mb-3" asp-items="ViewBag.Categories" style="background-color: rgba(255, 255, 255, 0.5);">
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="ImageURL" class="control-label" style="color:#E4C087;">Път/Линк до снимката</label>
                        <input asp-for="ImageURL" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="IsAvailable" class="control-label" style="color:#E4C087;">Налично ли е</label>
                        <input type="checkbox" asp-for="IsAvailable" class="form-check-input mb-3" />
                        <span asp-validation-for="IsAvailable" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="Ingredients" class="control-label" style="color:#E4C087;">Съставки</label>
                        <textarea asp-for="Ingredients" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="PreparationTime" class="control-label" style="color:#E4C087;">Време за приготвяне</label>
                        <input asp-for="PreparationTime" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" />
                        <span asp-validation-for="PreparationTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label asp-for="IsDeleted" class="control-label" style="color:#E4C087;">Изтрито ли е</label>
                        <input type="checkbox" asp-for="IsDeleted" class="form-check-input mb-3" />
                        <span asp-validation-for="IsDeleted" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 text-center">
                        <input type="submit" value="Запази" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    }

}

<div class="text-center mt-3 mb-5">
    <a asp-action="Index">Назад към списъка</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}