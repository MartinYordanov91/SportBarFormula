@model CreateMenuItemViewModel

@{
    ViewData["Title"] = "Create Menu Item";
}

<h2 class="text-center" style="color:#E4C087;">Create Menu Item</h2>

<div class="d-flex justify-content-center">
    <form asp-action="Create" method="post" class="p-3 w-50" style="background-color: rgba(147, 98, 33, 0.5); border-radius: 10px;">
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.Name" class="form-label-add-edit" style="color:#E4C087;">Наименование</label>
                <input asp-for="@Model.Name" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.Description" class="form-label-add-edit" style="color:#E4C087;">Описание</label>
                <textarea asp-for="@Model.Description" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.Price" class="form-label-add-edit" style="color:#E4C087;">Цена</label>
                <div class="input-group">
                    <span class="input-group-text mb-3" style="background-color: rgba(255, 255, 255, 0.5);">ЛВ</span>
                    <input asp-for="Price" class="form-control mb-3" aria-required="true" type="number" step="0.01" min="0" style="background-color: rgba(255, 255, 255, 0.5);" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.Quantity" class="form-label-add-edit" style="color:#E4C087;">Грамаж/Милилитри</label>
                <input asp-for="@Model.Quantity" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);"  />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit" style="color:#E4C087;">Категория</label>
                <select asp-for="@Model.CategoryId" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.ImageURL" class="form-label-add-edit" style="color:#E4C087;">Път/Линк до снимката</label>
                <input asp-for="@Model.ImageURL" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);" ></input>
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.Ingredients" class="form-label-add-edit" style="color:#E4C087;">Съставки</label>
                <textarea asp-for="@Model.Ingredients" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);"></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="@Model.PreparationTime" class="form-label-add-edit" style="color:#E4C087;">Време за приготвяне</label>
                <input asp-for="@Model.PreparationTime" class="form-control mb-3" style="background-color: rgba(255, 255, 255, 0.5);"></input>
                <span asp-validation-for="PreparationTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
