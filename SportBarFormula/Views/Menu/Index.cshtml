@model IEnumerable<MenuItemCardViewModel>

@{
    ViewData["Title"] = "Меню Артикули";
}

<h2 class="text-center mt-5" style="color:#E4C087;">@ViewData["Title"]</h2>
<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 d-flex flex-column" style="background-color: rgba(147, 98, 33, 0.5); border-radius: 10px;">
                    <a asp-action="Details" asp-route-id="@item.MenuItemId" class="text-decoration-none h-100 d-flex flex-column">
                        <img src="@item.ImageURL" class="card-img-top" alt="@item.Name" style="border-radius: 10px 10px 0 0;">
                        <div class="card-body flex-grow-1 d-flex flex-column">
                            <h5 class="card-title mb-5" style="color:#E4C087;">@item.Name</h5>
                            <p class="card-text" style="color:#E4C087;">@item.Ingredients</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between" style="color:#E4C087;">
                            <span>@item.Price лв</span>
                            <span>@item.Quantity гр/мл</span>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
