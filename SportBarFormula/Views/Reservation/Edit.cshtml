@model ReservationViewModel

<h2 class="text-center mt-5" style="color:#E4C087;">Редактиране на резервация</h2>
<hr />
@if (User?.Identity?.IsAuthenticated == true)
{
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="custom-form-wrapper">
            <div class="custom-form-container">
                <form asp-action="Edit" class="custom-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="ReservationId" name="ReservationId" value="@Model.ReservationId" />

                    <div class="form-group">
                        <label for="UserId" class="custom-label">Потребител ID</label>
                        <input type="text" class="form-control custom-input" id="UserId" name="UserId" value="@Model.UserId" readonly />
                    </div>
                    <div class="form-group">
                        <label for="ReservationDate" class="custom-label">Дата и час</label>
                        <input type="text" class="form-control custom-input" id="ReservationDate" name="ReservationDate" value="@Model.ReservationDate" />
                    </div>
                    <div class="form-group">
                        <label for="NumberOfGuests" class="custom-label">Брой гости</label>
                        <input type="number" class="form-control custom-input" id="NumberOfGuests" name="NumberOfGuests" value="@Model.NumberOfGuests" />
                    </div>
                    <div class="form-group">
                        <label for="TableId" class="custom-label">Маса</label>
                        <select class="form-control custom-select" id="TableId" name="TableId" asp-items="ViewBag.TableOptions">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="IsIndor" class="custom-label">Местоположение</label>
                        <select class="form-control custom-select" id="IsIndor" name="IsIndor" asp-items="ViewBag.IsIndorOptions">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="IsCanceled" class="custom-label">Състояние</label>
                        <select class="form-control custom-select" id="IsCanceled" name="IsCanceled" asp-items="ViewBag.IsCanceledOptions">
                        </select>
                    </div>
                    <button type="submit" class="btn custom-btn">Запази промените</button>
                </form>
            </div>
        </div>

        <!-- Добавяне на изображение с разположение на масите -->
        <div class="image-container mt-4">
            <img src="~/assets/img/tables-layout.jpg" alt="Разположение на масите" class="table-layout-image" />
        </div>
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/css/reservation/edit-form-styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/reservation/edit-table-map-styles.css" rel="stylesheet" asp-append-version="true" />
}
